<h1>
  <%= @event.name %>
</h1>

<%= render 'events/show/event-info', event: @event %>


<section id="teams-container">
  <% @event.teams.each_with_index do |team, i| %>

    <div class="team-card team-<%= i + 1 %>">

      <h2 class="team-title">
        <%= team.name %>
      </h2>

      <%= render 'events/show/each-players', team: team, event: @event, event_player: @event_player, i: i %>

    </div>

  <% end %>
</section>

<div class="text-center">
  <%= link_to event_path(@event), data: {turbo_method: :delete, turbo_confirm: "tu es sÃ»r?"} do %>
    <button id="delete-btn">Annuler le futsal</button>
  <% end %>
</div>
