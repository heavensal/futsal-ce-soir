<h1><%= @event.name %></h1>

<div class="event-info">
  <%= @event.location %>
</div>

<div class='event-info'>
  <%= @event.start_time %>
</div>

<div class='event-info'>
  <%= @event.price %>€ par joueur
  </div>

<div class='event-info'>
  <%= @event.players.length %> / <%= @event.max_players %> joueurs
  </div>

<div class='event-info'>
  créé par <%= @event.author.username %>
</div>

<section id="teams-container">
  <div id="team-1">
    <h2 class="team-title">
      <%= @event.teams[0].name %>
    </h2>
    <% @event.teams[0].players.each do |player| %>
      <div class="player-card-1"><%= player.first_name %></div>
    <% end %>
  </div>

  <div id="team-2">
    <h2>
      <%= @event.teams[1].name %>
    </h2>
    <% @event.teams[1].players.each do |player| %>
      <div class="player-card-2"><%= player.first_name %></div>
    <% end %>
  </div>

  <div id="bench">
    <h2>
      <%= @event.teams[2].name %>
    </h2>
    <% @event.teams[2].players.each do |player| %>
      <div class="player-card-3"><%= player.first_name %></div>
    <% end %>
  </div>
</section>

<%= link_to 'Revenir à l\'accueil', events_path %>
