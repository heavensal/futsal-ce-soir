<%= turbo_frame_tag 'edit-title' do %>
  <%= form_with model: @event do |f| %>
    <%= f.text_field :name, autofocus: true, class: "form-field"  %>
    <%= f.submit '✔️', id: 'form-submit-btn' %>
  <% end %>
<% end %>

