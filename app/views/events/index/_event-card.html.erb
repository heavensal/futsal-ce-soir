<div class="event-card">
  <%= link_to event_path(event) do %>
    <div class="event-content">

      <h2>
        <%= event.name %>
      </h2>

      <div>
        <p class="text-white">
          <%= event.location %>
        </p>

        <p class="text-white">
          <%= l event.start_time, format: :date %>
          <br>
          <%= l event.start_time, format: :hour %>
        </p>
      </div>

      <p class="<%= event.players.length < event.max_players ? "green-team" : "red-team" %>">
        <%= event.players.length %>/<%= event.max_players %> joueurs
      </p>

    </div>

  <% end %>
</div>
