<% team.players.each do |player| %>
  <div class="player-card">
    <%= player.first_name %>
  </div>
<% end %>

<% unless team.players.include?(current_user) %>
  <%= form_with model: [ event, event_player ], url: event_join_team_path(event), turbo_method: :post do |f| %>
    <%= f.hidden_field :team_id, value: team.id %>
    <%= f.submit "Rejoindre", class: 'join-team-cta' %>
  <% end %>
<% end %>
