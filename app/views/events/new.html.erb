<h1>Créer mon événement futsal</h1>

<%= form_with model: @event do |f| %>
  <div>
    <%= f.label :name, 'Nom de l\'événément' %>
    <%= f.text_field :name, value: "futsal by #{current_user.username}", autofocus: true  %>
  </div>

  <div>
    <%= f.label :location,'Où ?' %>
    <%= f.text_field :location, placeholder: '13 By Puma' %>
  </div>

  <div>
    <%= f.label :start_time, 'Quand ?' %>
    <% # Calcul du vendredi suivant
      next_friday = Time.now + ((5 - Time.now.wday) % 7).days
    %>
    <%= f.datetime_field :start_time, placeholder: next_friday.strftime("%Y-%m-%dT%H:%M") %>
  </div>

  <div>
    <%= f.label :max_players, 'Nombre de joueurs total ?' %>
    <%= f.number_field :max_players, placeholder: 10 %>
  </div>

  <div>
    <%= f.label :price, 'Prix par joueur ?' %>
    <%= f.number_field :price, placeholder: 10 %>
  </div>

  <%= f.submit 'Créer mon événément futsal' %>
<% end %>
